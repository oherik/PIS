	use	Labdefs.s12
	org	$2000
DELAY:	pshx		; 250 ms delay
	pshy
	ldx	#DelayConst
NEXT:	leax	-1,x
	ldy	#100
NEXT2:	leay	-1,y
	cpy	#0
	bne	NEXT2
	cpx	#0
	bne	NEXT
	puly
	pulx
	rts	
	
DELAY_B:		; Calls DELAY the number of times specified in B
	pshb
	tstb
DELAY_B_LOOP:
	beq	DELAY_B_RETURN
	jsr	DELAY
	decb
	bra	DELAY_B_LOOP
DELAY_B_RETURN:
	pulb
	rts 